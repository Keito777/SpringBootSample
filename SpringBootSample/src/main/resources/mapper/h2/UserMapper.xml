<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapper（javaインターフェース）とxmlのマッピング -->
<mapper namespace="com.example.repository.UserMapper">

  <!-- マッピング定義(ユーザー) -->
  <!-- resultMap →　select結果とJavaクラスのマッピング設定をする -->
  <!-- colum属性：select結果のカラム名を設定。property属性：Javaクラスのフィールド名を設定 -->
<resultMap type="com.example.domain.user.model.MUser" id="user">
  <id column="user_id" property="userId" />
  <result column="password" property="password" />
  <result column="user_name" property="userName" />
  <result column="birthday" property="birthday" />
  <result column="age" property="age" />
  <result column="gender" property="gender" />
  <result column="department_id" property="departmentId" />
  <result column="role" property="role" />
</resultMap>

<!-- 次に、マッピングしたリポジトリのどのメソッドとマッピングするのかを設定する -->
<!-- id属性に、メソッド名。タグ名はSQL文 -->
<!-- メソッドの引数は、#{メソッド引数名}で指定する。（今回は、MUserクラスを受け取るので、MUserクラスのフィールド名をSQL内に指定する） -->
  <!-- ユーザー1件登録（SQLの定義） -->
  <insert id="insertOne">
    insert into m_user(
        user_id
      , password
      , user_name
      , birthday
      , age
      , gender
      , department_id
      , role
    )
    values (
        #{userId}
      , #{password}
      , #{userName}
      , #{birthday}
      , #{age}
      , #{gender}
      , #{departmentId}
      , #{role}
    )
  </insert>
  
  <!-- ユーザー複数件取得 -->
   <!-- resultType属性には戻り値のデータ型を指定 -->
  <select id="findMany" resultType="MUser">
    select
      *
    from
      m_user
  </select>
  
  <!-- ユーザー1件検索 -->
  <select id="findOne" resultMap="user">
    select
      *
    from
      m_user
    where
      user_id = #{userId}
  </select>
  
  <!-- ユーザー1件更新 -->
  <update id="updateOne">
    update
      m_user
    set
        password = #{password}
      , user_name = #{userName}
    where
      user_id = #{userId}
  </update>

  <!-- ユーザー1件削除 -->
  <delete id="deleteOne">
    delete from
      m_user
    where
      user_id = #{userId}
  </delete>
</mapper>